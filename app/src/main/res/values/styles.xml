<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>






    <style name="GuessWordText" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubHeading" parent="@android:style/TextAppearance.Medium">
    </style>

    <style name="HelpText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="HelpText.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="HelpText.Caption">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>


</resources>
